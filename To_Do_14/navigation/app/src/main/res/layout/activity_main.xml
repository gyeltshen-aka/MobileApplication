<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/donutImg"
            android:layout_width="167dp"
            android:layout_height="140dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/donut"
            app:layout_constraintEnd_toStartOf="@+id/donutTxt"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topic" />

        <TextView
            android:id="@+id/donutTxt"
            android:layout_width="192dp"
            android:layout_height="70dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/donutText"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topic" />

        <TextView
            android:id="@+id/topic"
            android:layout_width="203dp"
            android:layout_height="59dp"
            android:layout_marginTop="44dp"
            android:fontFamily="cursive"
            android:gravity="center"
            android:text="Droid Desserts"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/oreo"
            android:layout_width="107dp"
            android:layout_height="114dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/oreo"
            app:layout_constraintEnd_toStartOf="@+id/oreoText"
            app:layout_constraintHorizontal_bias="0.657"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donutImg" />

        <TextView
            android:id="@+id/oreoText"
            android:layout_width="192dp"
            android:layout_height="70dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/oreoText"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donutTxt" />

        <ImageView
            android:id="@+id/cream"
            android:layout_width="139dp"
            android:layout_height="124dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/cream"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/creamTxt"
            app:layout_constraintHorizontal_bias="0.444"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oreo"
            app:layout_constraintVertical_bias="0.07" />

        <TextView
            android:id="@+id/creamTxt"
            android:layout_width="192dp"
            android:layout_height="70dp"
            android:layout_marginTop="108dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/creamText"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oreoText"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:layout_marginTop="37dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/creamTxt"
            app:layout_constraintVertical_bias="0.089"
            app:srcCompat="@android:drawable/sym_action_call" />


    </androidx.constraintlayout.widget.ConstraintLayout>
